@model IEnumerable<Cosmetic.Models.Holder>

@{
    ViewBag.Title = "分红权调置";
}

<ol class="breadcrumb">
    <li>@Html.ActionLink("用户管理", "Index", "User")</li>
    <li class="active">分红权调置</li>
</ol>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.EditorFor(modelItem => item.UserID, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => item.IDCard, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => item.Phone, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => item.BankName, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => item.BankCard, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                @Html.EditorFor(modelItem => item.Stock, new { htmlAttributes = new { @class = "form-control" } })
            </td>
            <td>
                <input type="button" value="删除" class="btn btn-default del" data-id="@item.ID" />
                <input type="button" value="修改" class="btn btn-default edit" data-id="@item.ID" />
            </td>
        </tr>
    }
    <tr>
        <td>
            <input type="text" id="create_userID" class="form-control" />
        </td>
        <td>
            <input type="text" id="create_IDCard" class="form-control" />
        </td>
        <td>
            <input type="text" id="create_phone" class="form-control" />
        </td>
        <td>
            <input type="text" id="create_bankName" class="form-control" />
        </td>
        <td>
            <input type="text" id="create_bankCard" class="form-control" />
        </td>
        <td>
            <input type="number" id="create_stock" class="form-control" />
        </td>
        <td>
            <input type="button" value="添加" class="btn btn-default" id="create" />
        </td>
    </tr>
</table>

@section Scripts {
    @Scripts.Render("~/bundles/holderIndex")
}