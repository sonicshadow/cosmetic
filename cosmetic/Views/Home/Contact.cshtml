                    ctx.textBaseline = "hanging";
                    ctx.fillStyle = "#fff";
                    ctx.fillText("Game Over", 100, 100);
                    ctx.fillText("分数：" + num, 100, 200);
                }
            }

            function drawCanvas(item) {
                ctx.beginPath();
                ctx.rect(item.x, item.y, item.w, item.h);
                ctx.fillStyle = item.color;
                ctx.fill();
                ctx.closePath();
            }

