@model Cosmetic.Models.Product

@{
    ViewBag.Title = "删除商品";
}

<div class="productDetails">
    <ol class="breadcrumb">
        <li>@Html.ActionLink("商品列表", "Index")</li>
        <li class="active">@Model.Name</li>
    </ol>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Info)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Info)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Spec)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Spec)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Number)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Number)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Unit)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Unit)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Release)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Release)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProductDetail)
            </dt>

            <dd>
                <table class="table table-add-last">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ProductDetail.FirstOrDefault().Min)</th>
                            <th>@Html.DisplayNameFor(model => model.ProductDetail.FirstOrDefault().Price)</th>
                            <th>@Html.DisplayNameFor(model => model.ProductDetail.FirstOrDefault().UseType)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductDetail)
                        {
                            <tr data-id="@item.ID">
                                <td>@item.Min</td>
                                <td>@item.Price</td>
                                <td>@item.UseType.GetDisplayName()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </dd>

            <dt>
            </dt>

            <dd>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="删除" class="btn btn-default" /> 
                        @Html.ActionLink("返回", "Index", null, new { @class = "btn btn-default" })
                    </div>
                }
            </dd>

        </dl>


    </div>
</div>
