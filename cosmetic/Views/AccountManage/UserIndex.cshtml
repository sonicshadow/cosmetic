@model IEnumerable<Cosmetic.Models.Account>

@{
    ViewBag.Title = "资金记录";
    var paged = (PagedList.IPagedList<Cosmetic.Models.Account>)Model;
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Totla)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remark)
            </th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Totla)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remark)
            </td>
        </tr>
    }
    @if (paged.IsLastPage)
    {
        <tfoot>
            <tr>
                <td></td>
                <td>
                    @ViewBag.Amount
                </td>
                <td></td>
                <td></td>
            </tr>
        </tfoot>
    }
</table>

@Html.PageList(paged,Url.PageUrl())