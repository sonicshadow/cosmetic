@model IEnumerable<Cosmetic.Models.RoleGroup>
@{
    ViewBag.Title = "分组管理";
    
}
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","InsideUsers")">管理员管理</a></li>
    <li class="active">分组管理</li>
</ol>
<nav class="navbar navbar-default" role="navigation">
    <div class="container-fluid">
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("添加新的分组", "Create")</li>
            </ul>
            <form class="navbar-form navbar-left">
                <input type="button" value="更新角色" class="btn btn-default" id="btnUpdate" />
            </form>
        </div>
    </div>
</nav>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>操作</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("编辑", "Edit", new { id = item.ID }) |
                @Html.ActionLink("删除", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>


@section Scripts{
    @Scripts.Render("~/Bundles/roleGroup")
}

